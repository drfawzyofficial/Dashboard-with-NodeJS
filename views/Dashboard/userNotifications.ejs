<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">لوحة التحكم الرئيسية</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">لوحكم التحكم</a></li>
                    <li class="breadcrumb-item active">إشعارات الحسابات</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<div class="row">
    <div class="col-lg-12">
        <div class="card">

            <div class="card-body">
                <h4 class="card-title">حالة إشعارات الحسابات</h4>
                <% if(notifications.length === 0) { %>
                <div class="alert alert-danger mb-0">للأسف لا يوجد أي إشعارات للحسابات وعند وجود إشعارات سوف يتم عرضها
                    بشكل طولي</div>
                <% } else {  %>

                <% notifications.forEach((notification) => { %>
                <div class="media bg-white p-2 shadow mt-2 rounded-lg">
                    <div class="avatar-xs mr-3">
                        <span class="avatar-title bg-primary rounded-circle font-size-16">
                            <i class="bx bx-cart"></i>
                        </span>
                    </div>
                    <div class="media-body">
                        <h6 class="mt-0 mb-1">إشعار جديد</h6>
                        <div class="font-size-12 text-muted">
                            <p class="mb-1">تم إنشاء حساب جديد من قبل <%= notification.userID.fullname %></p>
                            <p class="mb-0"><i class="mdi mdi-clock-outline"></i> إشعار مُنذ
                                <%= moment(notification.createdAt).fromNow() %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
                <% } %>
            </div>


        </div>

    </div>
</div>


